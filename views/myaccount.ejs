<%- include('./partials/header') %>

<div class="w-full h-screen flex items-start px-20 py-20 gap-10">
  <!-- Sidebar with Account Links -->
  <div class="w-[30%] rounded-md bg-white shadow-md p-6">
    <div class="w-full h-40 bg-yellow-500 mb-4">
      
    </div>
    <div class="w-full mb-4">
      <h3 class="text-2xl font-semibold">My Account</h3>
    </div>
    <div class="mb-4">
      <h4 class="text-lg font-semibold">Account Details</h4>
    </div>
    <ul class="list-none">
      <li class="py-2"><a href="/orders" class="text-blue-600 hover:underline">My Orders</a></li>
      <li class="py-2"><a href="/wishlist" class="text-blue-600 hover:underline">My Wishlist</a></li>
      <li class="py-2"><a href="/account/details" class="text-blue-600 hover:underline">Account Details</a></li>
      <li class="py-2"><a href="/account/changepassword" class="text-blue-600 hover:underline">Change Password</a></li>
    </ul>
  </div>

  <!-- Account Information and Recent Orders -->
  <div class="w-[70%]">
    <!-- Account Information -->
    <div class="mb-10">
      <h3 class="text-xl font-semibold mb-4">Account Information</h3>
      <div class="bg-white shadow-md rounded-lg p-6">
        <p class="mb-2"><span class="font-semibold">Name:</span> <%= user.fullname %></p>
        <p class="mb-2"><span class="font-semibold">Email:</span> <%= user.email %></p>
        <p class="mb-2"><span class="font-semibold">Phone:</span> <%= user.phone %></p>
        <p><span class="font-semibold">Address:</span> <%= user.address %></p>
      </div>
    </div>

    <!-- Recent Orders -->
    <div>
      <h3 class="text-xl font-semibold mb-4">Recent Orders</h3>
      <div class="bg-white shadow-md rounded-lg p-6">
        <% if (orders.length > 0) { %>
          <table class="min-w-full bg-white">
            <thead>
              <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Total</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach(function(order) { %>
                <tr>
                    <td><%= order.id %></td>
                    <td><%= order.date %></td>
                    <td><%= order.total %></td>
                    <td><%= order.status %></td>
                  </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
        <p>No orders found.</p>
        <% } %>
      </div>
    </div>
  </div>
</div>
